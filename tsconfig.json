{
  "include": ["src/**/*", "src/**/*.vue"],
  "ignoreDeprecations": "5.0",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "composite": true,
    "jsx": "preserve",
    "types": [
      "vite/client",
      "vite-plugin-pwa/client",
      "node",
      "./node_modules/user-agent-data-types"
    ],
    "paths": {
      "@/*": ["./*"]
    }
  }
}
